<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.timedia.metatron">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".Singleton.Thermocare_Application"
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".View.User_Registration"></activity>
        <activity android:name=".View.HomeActivity"></activity>
        <activity android:name=".View.View_UnAssignedJob_Technician" />
        <activity android:name=".View.Partsnames" />
        <activity android:name=".View.View_Job_Technician" />
        <activity android:name=".View.Dashboard_technician" />
        <activity android:name=".View.ForgotPassword" />
        <activity android:name=".View.Changepassword" />
        <activity android:name=".View.SHow_Services" />
        <activity android:name=".View.Add_Jobs" />
        <activity android:name=".View.Edit_Parts" />
        <activity android:name=".View.Add_Service" />
        <activity android:name=".View.Dashboard_User" />
        <activity
            android:name=".View.Add_Parts"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity
            android:name=".View.Add_User"
            android:windowSoftInputMode="adjustPan|stateHidden" />
        <activity android:name=".View.Users_List" />
        <activity
            android:name=".View.User_Login"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".View.Splash_Screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode"
            tools:replace="android:value" />
    </application>

</manifest>